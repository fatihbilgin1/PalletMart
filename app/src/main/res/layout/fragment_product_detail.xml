<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context="com.fatihbilgin.palletmart.kulanicipanel.ProductDetail">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="345dp"
        android:layout_height="249dp"
        android:layout_marginTop="64dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:text="Ürün Adı"
        android:textColor="@color/siyah"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productImage" />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="360dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:text="Ürün Açıklaması"
        android:textColor="@color/siyah"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productName" />


    <TextView
        android:id="@+id/productPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fiyat: 100 TL"
        android:textSize="24sp"
        android:textColor="@color/altın_sarısı"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/productDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/productStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stok: "
        android:textSize="16sp"
        android:textColor="@color/count_color"
        app:layout_constraintTop_toBottomOf="@+id/productPrice"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="324dp"
        android:layout_height="63dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/altın_sarısı"
        android:drawableLeft="@drawable/cart"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Sepete Ekle"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productPrice" />
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:contentDescription="Geri Dön"
        android:src="@drawable/arrowback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
